    "HostName": "127.0.0.1",
    "Port": "5672",
    "UserName": "admin",
    "Password": "admin",
    "ClientProvidedName": "Custom connection name", //客户端名称，如果RabbitMQ服务器支持，将展示在管理界面
    "VirtualHost": "/",
    "AutomaticRecoveryEnabled": true, //自动恢复连接
    "TopologyRecoveryEnabled": true, //拓扑恢复选项
    "RequestedConnectionTimeout": 60000, //连接尝试超时
    "RequestedHeartbeat": 60, //心跳超时
    "InitialConnectionRetries": 5, //初始连接失败重连次数
    "InitialConnectionRetryTimeoutMilliseconds": 200 //初始连接超时时间(ms)
  },
  "AllowedHosts": "*"
}
